<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <ImageView
        android:id="@+id/imgProduct"
        android:layout_width="@dimen/padding_none"
        android:layout_height="@dimen/padding_none"
        android:background="@color/blue_dark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintDimensionRatio="16:9"/>
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvName"
        android:layout_width="@dimen/padding_none"
        android:layout_height="wrap_content"
        tools:text="Nombre del producto"
        android:textAppearance="?attr/textAppearanceHeadline5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgProduct"
        android:layout_marginTop="@dimen/common_padding_default"
        android:layout_marginHorizontal="@dimen/common_padding_default"/>
    <androidx.core.widget.NestedScrollView
        android:layout_width="@dimen/padding_none"
        android:layout_height="@dimen/padding_none"
        app:layout_constraintTop_toBottomOf="@id/tvName"
        app:layout_constraintBottom_toTopOf="@id/efab_cart"
        app:layout_constraintStart_toStartOf="@id/tvName"
        app:layout_constraintEnd_toEndOf="@id/tvName">
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:text="@string/cart_description_text"
            android:layout_margin="@dimen/common_padding_default"
            android:textAppearance="?attr/textAppearanceBody1"
            />
    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/efab_cart"
        android:layout_width="@dimen/padding_none"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/tvName"
        android:text="@string/cart_name_add_cart"
        android:textColor="@color/blue_dark"
        android:textAlignment="center"
        app:icon="@drawable/ic_cart"
        app:iconGravity="textEnd"
        app:layout_constraintStart_toStartOf="@+id/tvName"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/common_padding_default"/>
</androidx.constraintlayout.widget.ConstraintLayout>