<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorPrimary"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <ImageView
        android:id="@+id/imgProduct"
        android:layout_width="@dimen/padding_none"
        android:layout_height="@dimen/padding_none"
        android:background="@color/blue_dark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintDimensionRatio="16:9"/>
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvName"
        android:layout_width="@dimen/padding_none"
        android:layout_height="wrap_content"
        tools:text="Nombre del producto"
        android:textColor="@color/blue_dark"
        android:textAppearance="?attr/textAppearanceHeadline5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgProduct"
        android:layout_marginTop="@dimen/common_padding_default"
        android:layout_marginHorizontal="@dimen/common_padding_default"/>
    <LinearLayout
        android:id="@+id/llQuantityTotal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="100"
        app:layout_constraintBottom_toTopOf="@+id/llQuantity"
        app:layout_constraintStart_toStartOf="@id/tvName"
        app:layout_constraintEnd_toEndOf="@id/tvName"
        android:orientation="horizontal">
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvQuantityA"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="70"
            android:gravity="start"
            android:layout_margin="@dimen/common_padding_min"
            android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Subtitle"
            android:text= "@string/text_test_avaiables"
            android:textColor="@color/blue_dark"/>
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvTotal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="30"
            android:layout_margin="@dimen/common_padding_min"
            android:gravity="end"
            android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Subtitle"
            android:text= "@string/text_test_total"
            android:textColor="@color/blue_dark"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/llQuantity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/common_padding_default"
        android:gravity="center"
        android:padding="@dimen/common_padding_min"
        app:layout_constraintStart_toStartOf="@+id/tvName"
        app:layout_constraintEnd_toEndOf="@+id/tvName"
        app:layout_constraintBottom_toTopOf="@+id/efab_cart">
        <ImageButton
            android:id="@+id/ibRem"
            android:contentDescription="@string/ib_description_remove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_add_circle"
            android:background="?attr/selectableItemBackground"
            />
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/common_padding_default"
            android:layout_marginEnd="@dimen/common_padding_min">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="3"
                android:textAlignment="center"
                android:inputType="number"
                android:imeOptions="actionDone"
                tools:text="5"
                android:textColor="@color/blue_dark"/>
        </com.google.android.material.textfield.TextInputLayout>
        <ImageButton
            android:id="@+id/ibSum"
            android:contentDescription="@string/ib_description_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_add_circle"
            app:layout_constraintStart_toEndOf="@id/tilQuantity"
            android:background="?attr/selectableItemBackground"
            />
    </LinearLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="@dimen/padding_none"
        android:layout_height="@dimen/padding_none"
        app:layout_constraintTop_toBottomOf="@id/tvName"
        app:layout_constraintBottom_toTopOf="@id/llQuantityTotal"
        app:layout_constraintStart_toStartOf="@id/tvName"
        app:layout_constraintEnd_toEndOf="@id/tvName">
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/blue_dark"
            tools:text="@string/cart_description_text"
            android:layout_margin="@dimen/common_padding_default"
            android:textAppearance="?attr/textAppearanceBody1"
            />
    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/efab_cart"
        android:layout_width="@dimen/padding_none"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/tvName"
        android:text="@string/cart_name_add_cart"
        android:textColor="@color/blue_light"
        android:backgroundTint="@color/blue_dark"
        android:textAlignment="center"
        app:icon="@drawable/ic_cart"
        app:iconGravity="textEnd"
        app:iconTint="@color/blue_light"
        app:strokeColor="@color/white"
        app:strokeWidth="@dimen/stroke_car_dim"
        app:layout_constraintStart_toStartOf="@+id/tvName"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/common_padding_default"/>
</androidx.constraintlayout.widget.ConstraintLayout>